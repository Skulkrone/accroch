{% extends 'base.html.twig' %}

{% block title %}
    {% for shop in shops %}
        {{ shop.Label }} - Boutique 
    {% endfor %}
{% endblock %}

{% block body %}
    <h1>Ma Boutique</h1>

    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for shop in shops %}
                <tr>
                    <td>{{ shop.id }}</td>
                    <td>{{ shop.Label }}</td>
                    <td><img class="card-img-top" src="{{ shop.ShopImage }}" alt="Responsive image"></td>
                    <td>
                        <a href="{{ path('shop_show', {'id': shop.id}) }}">Afficher</a>
                        <a href="{{ path('shop_edit', {'id': shop.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="lien">
        <a href="{{ path('products_new') }}" class="text-dark">Ajouter des produits Ã  la boutique</a>
    </div>
{% endblock %}