{% extends 'base.html.twig' %}

{% block title %}{{ shop.Label }}{% endblock %}

{% block body %}
    <h1 class='text-bold'><img src="{{ asset('uploads/images/logo/' ~ shop.logo) }}" alt="{{ shop.Label }}" title="{{ shop.Label }}" /></h1>
        {% if is_granted(['ROLE_USER','ROLE_ADD','ROLE_ADMIN']) %}
            {% for boutique in shop.fkCatShopId %}
                {% for prod in boutique.fkCatShopProdId %}
                <table class="table table-dark table-hover text-center">
                    <thead>
                        <tr>
                            <th>{{ boutique.Label }}</th>
                            <th>Prix</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tr>
                        <td><a href="{{ path('products_show', {'id': prod.id}) }}" class="text-white">{{ prod.Label }}</a></td>
                        <td>{{ prod.Price }} €</td>
                        <td> *** </td>
                    </tr>
                </table>
            {% endfor %}
        {% endfor %}
    {% elseif app.user == false %}
        {% for boutique in shop.fkCatShopId %}
            {% for prod in boutique.fkCatShopProdId %}
                <table class="table table-dark table-hover text-center">
                    <thead>
                        <tr>
                            <th>{{ boutique.Label }}</th>
                            <th>Prix</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tr>
                        <td><a href="{{ path('products_show', {'id': prod.id}) }}" class="text-white">{{ prod.Label }}</a></td>
                        <td>{{ prod.Price }} €</td>
                        <td> *** </td>
                    </tr>
                </table>
            {% endfor %}
        {% endfor %}
    {% endif %}


    {% if shop.fkUserId == app.user %}
        <div class="lien">
            <a href="{{ path('user_index') }}">Retour</a>
            <br />
            <br />
            <a href="{{ path('shop_edit', {'id': shop.id}) }}">Modifier</a>
        </div>

        {{ include('shop/_delete_form.html.twig') }}
    {% else %}
        <div class="lien">
            <a href="{{ path('shop_index') }}">Retour</a>
        </div>
    {% endif %}


    '<body style="background : url('{{ asset('uploads/images/boutique/' ~ shop.ShopImage) }}') no-repeat;background-size : cover;"></body>';




{% endblock %}