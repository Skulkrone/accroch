<!DOCTYPE html>
<html>
    <head>
        <!-- Caractère -->
        <meta charset="UTF-8" />

        <!-- Compatibilité Internet explorer 9 et + -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- compatibilité Mac et Iphone -->
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{% block title %}Accroch'.com{% endblock %}</title>
        {% block head_css %}

        {% endblock %}
        {% block head_js %}

        {% endblock %}
        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap.min.css')}}" rel="stylesheet" />
            <link href="{{ asset('assets/css/pricing.css')}}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        {% block navigation %}
            <nav class="navbar navbar-expand-lg navbar-light amber lighten-4">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="../../image/logo.png" alt="" title=""></a>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user">Espace Client</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('announcements_index') }}">Annonces</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/shop">Boutiques</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/cat/shop">Catégorie Produits de la Boutique</a>
                                    <a class="dropdown-item" href="/products">Produits</a>
                                    <a class="dropdown-item" href="/marketers">Annonceurs</a>
                                    <a class="dropdown-item" href="/cat/add">Catégorie bannière</a>
                                    <a class="dropdown-item" href="/banner">Bannière</a>
                                    <a class="dropdown-item" href="/invoices">Factures</a>
                                </div>
                            </li>
                        {% elseif is_granted('ROLE_ADD') %}
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user">Espace Client</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/marketers">Boutiques</a>
                            </li>
                        {% elseif is_granted('ROLE_USER') %}
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user">Espace Client</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('announcements_index') }}">Annonces</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/shop">Boutiques</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/products">Produits</a>
                            </li>
                        {% else %}
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('announcements_index') }}">Annonces</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('shop_index') }}">Boutiques</a>
                            </li>
                        {% endif %}
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        {% if is_granted(['ROLE_ADMIN','ROLE_USER','ROLE_ADD'])  %}
                            <a class="btn btn-outline-dark btn-rounded waves-effect" href="/logout">Déconnexion</a>
                        {% else %}
                            <a class="btn btn-outline-dark btn-rounded waves-effect" href="/register">Inscription</a>&nbsp&nbsp
                            <a class="btn btn-outline-dark btn-rounded waves-effect" href="/login">Connexion</a>
                        {% endif %}
                    </form>
                </div>
            </nav>
        {% endblock %}

        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer class="pt-4 my-md-5 pt-md-5 border-top">
                <div class="row">
                    <div class="col-6 col-md-2">
                        <h5 class="display-5 text-bold">Features</h5>
                        <ul class="list-unstyled text-small">
                            <li><a class="text-muted" href="#">Cool stuff</a></li>
                            <li><a class="text-muted" href="#">Random feature</a></li>
                            <li><a class="text-muted" href="#">Team feature</a></li>
                            <li><a class="text-muted" href="#">Stuff for developers</a></li>
                            <li><a class="text-muted" href="#">Another one</a></li>
                            <li><a class="text-muted" href="#">Last time</a></li>
                        </ul>
                    </div>
                    <div class="col-6 col-md-2">
                        <h5>Resources</h5>
                        <ul class="list-unstyled text-small">
                            <li><a class="text-muted" href="#">Resource</a></li>
                            <li><a class="text-muted" href="#">Resource name</a></li>
                            <li><a class="text-muted" href="#">Another resource</a></li>
                            <li><a class="text-muted" href="#">Final resource</a></li>
                        </ul>
                    </div>
                    <div class="col-6 col-md-2">
                        <h5>A propos</h5>
                        <ul class="list-unstyled text-small">
                            <li><a class="text-muted" href="https://www.skulkrone-design.fr/" target="_blank" title="Skulkrone-Design">&copy; 2018 Skulkrone-Design</a></li>
                            <li><a class="text-muted" href="#">Plan du site</a></li>
                            <li><a class="text-muted" href="#">CGVU</a></li>
                            <li><a class="text-muted" href="#">Mentions Légales</a></li>
                        </ul>
                    </div>
                </div>
            </footer>
        {% endblock %}

    </body>

    {% block javascripts %}
        <script src="{{ asset('assets/js/jquery-3.3.1.min.js')}}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js')}}"></script>
    {% endblock %}
</html>


