{% extends 'base.html.twig' %}

{% block title %}{{ product.Label }}{% endblock %}

{% block body %}
    <h1 class='text-white text-bold'>{{ product.fkCatShopId.Label }}</h1>

    <div class="container">
        <div class="card-deck mb-6 text-center">
            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">{{ product.Label }}</h4>
                </div>
                <div class="card-body">
                    <img class="rounded mx-auto d-block" src="{{ asset('uploads/images/produits/' ~ product.ImageProducts) }}" alt="{{ product.Label }}" title="{{ product.Label }}" />
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Prix : {{ product.Price }} â‚¬</li>
                        <li>Stock : *** </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    {% if app.user == product.fkCatShopId.fkShopId.fkUserId %}
        <div class="lien">
            <a href="{{ path('shop_show', {'id': product.fkCatShopId.fkShopId.id}) }}">Retour</a>
            <br />
            <br />
            <a href="{{ path('products_edit', {'id': product.id}) }}">Modifier</a>
        </div>

        {{ include('products/_delete_form.html.twig') }}
    {% else %}
        <div class="lien">
            <a href="{{ path('shop_show', {'id': product.fkCatShopId.fkShopId.id}) }}">Retour</a>
        </div>
    {% endif %}

{% endblock %}