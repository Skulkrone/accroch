{% extends 'base.html.twig' %}

{% block body %}

    <!-- Start Contact Us Section -->
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="title-2">
                      Laisser nous un message
                    </h2>
                    <!-- Form -->
                    <form name="contact" method="post" id="upload-form">
                        <div id="contact">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group is-empty">
                                                <label for="contact_name" class="form-control-label required">Nom</label>
                                                <input type="text" id="contact_name" name="contact[name]" required="required" class="form-control"><span class="material-input"></span>
                                            </div>                   
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group is-empty">
                                                <label for="contact_firstName" class="form-control-label required">Prénom</label>
                                                <input type="text" id="contact_firstName" name="contact[firstName]" required="required" class="form-control"><span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group is-empty">
                                                <label for="contact_email" class="form-control-label required">Email</label>
                                                <input type="email" id="contact_email" name="contact[email]" required="required" class="form-control"><span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group is-empty">
                                                <label for="contact_subject" class="form-control-label required">Sujet</label>
                                                <input type="text" id="contact_subject" name="contact[subject]" required="required" class="form-control"><span class="material-input"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>    
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group is-empty">
                                                <label for="contact_message" class="form-control-label required">Message</label>
                                                <textarea id="contact_message" name="contact[message]" required="required" class="form-control"></textarea><span class="material-input"></span>
                                            </div>
                                            <input type="hidden" id="contact__token" name="contact[_token]" value="g7swe7hUnH8nwDF8jqsZmgTwTk0wfAuUHgpIpqOnKnE">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                     <input type="submit" id="submit" class="btn btn-common" value="Envoyer votre message"> 
                                </div>
                            </div> 
                        </div> 
                    </form>
                </div>
                <div class="col-md-4">
                    <h2 class="title-2">
                        Information Contact
                    </h2>
                    <div class="information">
                        <div class="contact-datails">
                            <div class="icon">
                                <i class="fa fa-map-marker icon-radius"></i>
                            </div>
                            <div class="info">
                                <h3>Adresse</h3>
                                <span class="detail">Bureau : NO.22-23 Street Name- City,Country</span>
                                <span class="datail">Centre Client : NO.130-45 Streen Name- City, Country</span>
                            </div>
                        </div>                
                        <div class="contact-datails">
                            <div class="icon">
                                <i class="fa fa-phone icon-radius"></i>
                            </div>
                            <div class="info">
                                <h3>Numéros de Téléphone</h3>
                                <span class="detail">Bureau : +880 123 456 789</span>
                                <span class="datail">Support Client : +880 123 456 789 </span>
                            </div>
                        </div>
                        <div class="contact-datails">
                            <div class="icon">
                                <i class="fa fa-location-arrow icon-radius"></i>
                            </div>
                            <div class="info">
                                <h3>Adresse Email</h3>
                                <span class="detail">Client 
                                    Support : info&copy;mail.com</span><br />
                                <span class="detail">Support Technique : support&copy;mail.com</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Us Section  -->    

    <div id="google-map"></div>
    <!-- End Map Section -->
{% endblock %}
