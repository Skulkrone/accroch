{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1 class="text-center" style="margin-top: 20px;margin-bottom: 20px;">Messages</h1>

    <section class='content'>
        <div class='container'>
            <div class='row'>
                <div class="col-md-3">
                    <div class="list-group">
                        {% for user in userId %}
