                                <div class="form-group">
                                    <textarea name="content" class="form-control" placeholder="Ecrivez votre mesage">
{{ message.Content }}
{{ message.CreatedAt ? message.CreatedAt| localizeddate('none', 'none', 'fr', 'Europe/Paris', 'EEEE d MMMM Y H:mm:ss') : '' }}</textarea>
                                </div>
                                <button class="btn btn-primary" type="submit">Envoyer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

